@model LoginViewModel
<table>
    <tr>
        <td>
            <div class="row loginForm">
                <div class="col-md-12">
                    <h4>Registrar usuário</h4>
                    <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
                        <hr />
                        <div class="form-group">
                            <label asp-for="UserName" class="col-md-2 control-label"></label>
                            <div class="col-md-12">
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Senha" class="col-md-2 control-label"></label>
                            <div class="col-md-12">
                                <input asp-for="Senha" class="form-control" />
                                <span asp-validation-for="Senha" class="text-danger">A senha precisa ter no mínimo 6 letras e uma letra maiuscula.</span>
                            </div>

                        </div>

                        <div class="form-group pull-right formPullRightButton">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-success " value="Registrar" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </td>
    </tr>
</table>

